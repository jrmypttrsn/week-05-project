<% if @soul.errors.any? %>
  <% @soul.errors.full_messages.each do |m| %>
    <p>Error: <%= m %></p>
  <% end %>
<% end %>

<h1>Harvest a Soulâ„¢!</h1>


<form action="/souls" method="post">
 <h3>Name: <span class="label label-default"></h3><input type="text" name="name" class="form-control"></br>

  <h3>Occupation: <span class="label label-default"></h3><input type="text", name="occupation" class="form-control"></br>
  <h3>Division: <span class="label label-default"></h3>
   <select name="division_id" class="form-control">
     <option>No Division</option>
