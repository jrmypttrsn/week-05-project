<h1>Edit Episode</h1>

<% if @episode.errors.any? %>
  <div>
    <h2>Errors:</h2>
    <ul>
      <% @episode.errors.full_messages.each do |e| %>
        <li><%= e %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<form action="/episodes/<%= @episode.id %>" method="post">
  <input type="hidden" name="_method" value="patch">
  <div class="form-group">
    Title:
    <input type="textarea" class="form-control" name="title" value="<%= @episode.title %>">
  </div>
  <div class="form-group">
    Date:
    <input type="date" class="form-control" name="date" value="<%= @episode.date %>">
  </div>
  <div class="form-group">
    Description:
    <input type="textarea" class="form-control" name="description" value="<%= @episode.description %>">
  </div>
  <div class="form-group">
    <input type="submit" value="Update Episode" class="btn btn-default">
  </div>
</form>

